{
  "include": ["./src/*/*"],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["esnext", "DOM"],
    "allowJs": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "removeComments": true,
    "noEmit": false,
    "strict": true,
    "alwaysStrict": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}